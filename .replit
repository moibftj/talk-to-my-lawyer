modules = ["nodejs-20", "web", "bash"]
[agent]
expertMode = true
integrations = ["javascript_openai_ai_integrations:2.0.0"]

[nix]
channel = "stable-25_05"

[userenv]

[userenv.shared]
NEXT_PUBLIC_SUPABASE_URL = "https://placeholder.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY = "placeholder-anon-key"
NEXT_PUBLIC_SITE_URL = "http://localhost:5000"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY = "pk_test_placeholder"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Next.js Dev"

[[workflows.workflow]]
name = "Next.js Dev"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pnpm dev --hostname 0.0.0.0 -p 5000"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "autoscale"
run = ["pnpm", "start", "-p", "5000"]
build = ["pnpm", "build"]
