# Test Environment Configuration
# Copy this to .env.test and fill in values

# App URL (local or deployed)
TEST_BASE_URL=http://localhost:3000

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Test Accounts (create these in your test environment)
TEST_SUBSCRIBER_EMAIL=test+subscriber@example.com
TEST_SUBSCRIBER_PASSWORD=TestPassword123!

TEST_EMPLOYEE_EMAIL=test+employee@example.com
TEST_EMPLOYEE_PASSWORD=TestPassword123!

TEST_ATTORNEY_EMAIL=test+attorney@example.com
TEST_ATTORNEY_PASSWORD=TestPassword123!

TEST_SUPERADMIN_EMAIL=test+superadmin@example.com
TEST_SUPERADMIN_PASSWORD=TestPassword123!

# Stripe Test Mode
STRIPE_SECRET_KEY=sk_test_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...

# Email (optional for testing)
RESEND_API_KEY=re_...
EMAIL_FROM=test@yourdomain.com
